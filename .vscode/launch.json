    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug convert",
            "program": "${workspaceFolder}/target/debug/${workspaceFolderBasename}",
            "args": [
                "convert",
                "-i",
                "meg_wiwauf_laminat1.transposed.mid",
                "-o",
                "./out/",
                "-O",
                "./transposed.mid",
                "-vvvt",
            ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "cargo build"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug config",
            "program": "${workspaceFolder}/target/debug/${workspaceFolderBasename}",
            "args": [
                "config",
            ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "cargo build"
        }
    ]
}